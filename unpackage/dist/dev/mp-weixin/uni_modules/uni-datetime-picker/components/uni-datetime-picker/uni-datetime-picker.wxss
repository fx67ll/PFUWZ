.uni-date-mask {
	position: fixed;
	bottom: 0px;
	top: 0px;
	left: 0px;
	right: 0px;
	background-color: rgba(0, 0, 0, 0);
	transition-duration: 0.3s;
	z-index: 996;
}
.uni-date-single--x {
	/* padding: 0 8px; */
	background-color: #fff;
	position: absolute;
	top: 0;
	z-index: 999;
	border: 1px solid #ebeef5;
	box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
	border-radius: 4px;
}
.uni-date-range--x {
	/* padding: 0 8px; */
	background-color: #fff;
	position: absolute;
	top: 0;
	z-index: 999;
	border: 1px solid #ebeef5;
	box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
	border-radius: 4px;
}
.uni-date-editor--x__disabled {
	opacity: 0.4;
	cursor: default;
}
.uni-date-editor--logo {
	width: 16px;
